# Binance Testnet API Credentials
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_SECRET_KEY=your_testnet_secret_key_here

# Trading Configuration
TRADING_MODE=BALANCED
# Можливі значення: CONSERVATIVE, BALANCED, AGGRESSIVE

DEPOSIT_USDT=1000
# Початковий депозит в USDT

# Model Configuration
MODEL_FILE_NAME=agent_model.keras
MODEL_DRIVE_FILE_ID=
# ID файлу моделі на Google Drive (заповниться автоматично після першого збереження)

# Google Drive API
CLIENT_SECRETS_FILE=client_secrets.json
GOOGLE_TOKEN_FILE=token.json
# client_secrets.json потрібно отримати з Google Cloud Console

# Trading Parameters
POLL_INTERVAL_SECONDS=60
# Інтервал між торговими циклами (секунди)

SAVE_MODEL_INTERVAL_STEPS=30
# Кожні N кроків модель зберігається на Google Drive

TRAIN_BATCH_SIZE=32
# Розмір батча для навчання RL агента

MAX_EPISODE_LENGTH=96
# Максимальна довжина епізоду

# Logging
LOG_LEVEL=INFO
# Можливі значення: DEBUG, INFO, WARNING, ERROR

# Server
PORT=8000
# Порт для Flask сервера (Render автоматично встановлює PORT)

